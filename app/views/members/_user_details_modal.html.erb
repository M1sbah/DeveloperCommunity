<%= form_with model: @user, url: update_user_details_path(@user), method: :patch do |form| %>
	<div class="modal-body">
		<div class="row">
			<div class="col-lg-12">
				<div class="form-group row">
					<div class="col-lg-6">
						<%= form.label :first_name, class:"form-label text-muted  mt-3" %>
						<%= form.text_field :first_name, placeholder: "First Name", value: @user.first_name ,class:"form-control" %>
					</div>
					<div class="col-lg-6">
						<%= form.label :last_name, class:"form-label text-muted mt-3" %>
						<%= form.text_field :last_name, placeholder: "Last Name", value: @user.last_name ,class:"form-control" %>
					</div>
				</div>
			</div>

			<div class="col-lg-12">
				<div class="form-group">
					<%= form.label :country, class:"form-label mx-3 text-muted mt-3" %>
					<%= form.text_field :country, placeholder: "Country", value: @user.country ,class:"form-control mx-2" %>
				</div>
			</div>

			<div class="col-lg-12">
				<div class="form-group">
					<%= form.label :city, class:"form-label mx-3 text-muted mt-3" %>
					<%= form.text_field :city, placeholder: "City", value: @user.city ,class:"form-control mx-2" %>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="form-group">
					<%= form.label :state, class:"form-label mx-3 text-muted mt-3" %>
					<%= form.text_field :state, placeholder: "State", value: @user.state ,class:"form-control mx-2" %>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="form-group">
					<%= form.label :pincode, class:"form-label mx-3 text-muted mt-3" %>
					<%= form.text_field :pincode, placeholder: "Pincode", value: @user.pincode ,class:"form-control mx-2" %>
				</div>
			</div>

			<div class="col-lg-12">
				<div class="form-group mx-2">
					<%= form.text_field :profile_title, placeholder: "Profile", value: @user.profile_title, class:"form-control  mt-3" %>
				</div>
			</div>

		</div>
	</div>
	<div class="modal-footer">
		<%= form.submit 'save changes', class:"btn btn-primary", data: {action: 'click->bs-modal#submitEnd'} %>
		<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
	</div>
<% end %>