<li draggable="true" class="list-group-item" id="work_experience_item_<%= work_experience.id %>">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-between">
            <p class="fw-bold"><%= work_experience.job_title %></p>
            <div class="col-lg-3">
                <% if current_user.id == work_experience.user.id %>
                    <div class="d-flex justify-content-end">
                        <%= link_to edit_work_experience_path(work_experience), data: {controller: 'bs-modal-form'} do %>
                            <i class="bi bi-pencil-fill"></i>
                        <% end %>
                        <%= link_to work_experience, data: {turbo_method: :delete, turbo_confirm: "Are You Sure?"} do %>
                            <i class="bi bi-trash-fill text-danger mx-2"></i>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <small><i class="bi bi-building mx-3"></i><%= work_experience.company %></small><br>
    <small><i class="bi bi-suitcase-lg-fill mx-3"></i><%= work_experience.employment_type %></small><br>
    <small><i class="bi bi-geo-alt-fill mx-3"></i><%= work_experience.job_location %></small><br>
    <small><i class="bi bi-calendar-check-fill mx-3"></i><%= work_experience.job_duration %></small>

</li>